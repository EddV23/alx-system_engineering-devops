global
    log /dev/log local0
    maxconn 2048
    user haproxy
    group haproxy
    tune.ssl.default-dh-param 2048

defaults
    log global
    mode http
    option httplog
    option dontlognull
    retries 3
    option redispatch
    timeout connect 5000
    timeout client 10000
    timeout server 10000
    option forwardfor
    option http-server-close

frontend www_frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.theeddv23.tech/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    acl is_www hdr(host) -i www.theeddv23.tech
    use_backend www_backend if is_www

backend www_backend
    server web_server 127.0.0.1:80

frontend http_frontend
    bind *:80
    acl is_www hdr(host) -i www.theeddV23.tech
    redirect scheme https if is_www
